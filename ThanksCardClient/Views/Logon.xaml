<UserControl x:Class="ThanksCardClient.Views.Logon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThanksCardClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Margin="-3,-3,0,0" Stroke="Black">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Views/Thank Card Done (17).png" Stretch="Uniform"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBox Text="{Binding User.Name}" Margin="175,198,175,202" Width="451" Height="51" AutomationProperties.Name="User Name"/>
        <TextBox Text="{Binding User.Password}" Margin="175,268,175,132" RenderTransformOrigin="0.5,0.5" Width="451" Height="51">

            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.027"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Content="Logon" Command="{Binding LogonCommand}" HorizontalAlignment="Center" Height="34" Margin="0,333,0,0" VerticalAlignment="Top" Width="148" Background="#FF3B435F" Foreground="White" FontSize="20"/>
    </Grid>
</UserControl>
