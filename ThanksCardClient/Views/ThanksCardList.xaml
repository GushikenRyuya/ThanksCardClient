<UserControl x:Class="ThanksCardClient.Views.ThanksCardList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThanksCardClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" Height="450" VerticalAlignment="Center" Width="800">
        <Grid.Background>
            <ImageBrush ImageSource="/Views/ThankcardList.png"/>
        </Grid.Background>
        <DataGrid ItemsSource="{Binding ThanksCards}" AutoGenerateColumns="False" CanUserAddRows="False" SelectionChanged="DataGrid_SelectionChanged" Margin="94,182,65,68" Background="{x:Null}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="送信者" Binding="{Binding From.Name}" Width="130" />
                <DataGridTextColumn Header="受信者" Binding="{Binding To.Name}" Width="126" />
                <DataGridTextColumn Header="タイトル" Binding="{Binding Title}" Width="136" />
                <DataGridTextColumn Header="日付" Binding="{Binding CreatedDateTime}" Width="123" />
                <DataGridTextColumn Header="コメント" Binding="{Binding CreatedDateTime}" Width="138" />


            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
